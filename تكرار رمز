#include <iostream.h>
#include <conio.h>
void T(char ,int);
void main ()
{
 char L;
 int M;
 L: cout << "\nEnter a character: ";
 cin >> L;
 cout << "Enter number of times to repeat it: " ;
 cin >> M;
 T(L,M);
 goto L;
 getch();
 }
void T(char ch, int n)
 {
 for (int j = 0; j < n; j++)
 cout << ch ;
 cout << endl;
 }
